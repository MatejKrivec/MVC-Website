@{
}

<h1>Merch</h1>
@model List<Merch>

    @foreach (var item in Model)
    {
     <div style="border: 1px solid black; padding: 10px; margin-bottom: 10px;">
        <h3>@item.naziv</h3>
        <p>Cena: @item.cena</p>
        <form method="post" action="@Url.Action("Merchendise", "Merch")">
            @Html.HiddenFor(modelItem => item.Id)
            @Html.HiddenFor(modelItem => item.naziv)
            @Html.HiddenFor(modelItem => item.cena)
            <button type="submit">Dodaj v kosarico</button>
        </form>
    </div>
    }
